<script>
    $(".Content").each(function (index) {
        console.log();
        var value = $(this).html();
        $(this).html($.parseHTML(value));

    });
    $("#toggleAddNew").click(function () {
        $("#addNewFormWrapper").toggle(500);
    })
    if($("#preview-template")[0]){
        $("#preview-template").dropzone({
            url: "/ImageUpload/SaveUploadedFile", maxFiles: 1, previewTemplate: $("#preview-template")[0].innerHTML, accept: function (file, done) {
                $("#toBeHidden").addClass("hidden");
                $("#ImageUrl").val('/Images/Uploads/' + file.name);
                done();
            }
        });
    }
    $('#AddNewsForm').submit(function (e) {
        e.preventDefault();
        $.ajax({
            url: '/Home/addNews',
            type: 'post',
            data: $('#AddNewsForm').serialize(),
            success: function (data) {
                location.reload();
            },
            error: function (data) {
                console.log(data);
            }
        });
    });
    $('#contactForm').submit(function (e) {
        e.preventDefault();
        $.ajax({
            url: '/Home/addContact',
            type: 'post',
            data: $('#contactForm').serialize(),
            success: function (data) {
                location.reload();
            },
            error: function (data) {
                console.log(data);
            }
        });
    });
    function deleteNews(Id) {
        $.ajax({
            url: '/Home/deleteNews',
            type: 'post',
            data: { Id: Id },
            success: function (data) {
                $("#newsWrapper_" + Id).toggle(500);
            },
            error: function (data) {
                console.log(data);
            }
        });
    }
</script>