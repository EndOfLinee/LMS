                            </div>
                        </div>
                        <img src="@item.ImageUrl" class="img-responsive" alt="">
                    </a>
                    <div class="portfolio-caption">
                        <h4>@item.Title</h4>
                        <p class="text-muted hidden">@item.Content</p>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <button class="btn btn-danger btn-default glyphicon glyphicon-remove" onclick="deleteNews(@item.Id)"></button>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</section>
